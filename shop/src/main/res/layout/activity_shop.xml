<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FFEDC7"
        android:orientation="vertical"
        tools:context="com.mh.shop.ui.activity.ShopActivity">

        <com.mh55.easy.widget.title.StatusBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/icon_task_coupon_shop_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="券包商店"
                android:textColor="#001140"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mRule"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:drawableRight="@mipmap/icon_task_coupon_shop_rule"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:text="规则"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

        </RelativeLayout>

        <com.hjq.shape.layout.ShapeFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"
            app:shape_radius="12dp"
            android:paddingVertical="16dp"
            app:shape_solidColor="@color/color_white"
            app:shape_strokeColor="@color/color_shop"
            app:shape_strokeSize="2dp">

            <com.scwang.smart.refresh.layout.SmartRefreshLayout
                android:id="@+id/mSmartRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.scwang.smart.refresh.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"/>

                <com.scwang.smart.refresh.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.scwang.smart.refresh.layout.SmartRefreshLayout>
        </com.hjq.shape.layout.ShapeFrameLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>