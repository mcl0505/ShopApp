<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:shape_radius="8dp"
        android:layout_marginBottom="12dp"
        app:shape_solidColor="@color/color_white">

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/exchange"
            style="@style/button_50"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:paddingHorizontal="20dp"
            android:text="去兑换"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/distributorType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通分销员"
            style="@style/tv_16_333_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/distributorValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需300贡献值"
            android:textSize="14sp"
            android:textColor="#979797"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/distributorType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </com.hjq.shape.layout.ShapeConstraintLayout>
</layout>