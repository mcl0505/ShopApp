<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_solidColor="@color/color_white"
        app:shape_radius="12dp"
        app:shape_strokeSize="1dp"
        app:shape_strokeColor="@color/color_shop"
        android:orientation="vertical">
        <com.hjq.shape.layout.ShapeConstraintLayout
            android:id="@+id/llInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shape_radius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            app:shape_solidColor="@color/color_FFF2E2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shopIcon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="h,1:1"/>

            <TextView
                android:id="@+id/shopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/shopIcon"
                android:textColor="#5C350E"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="8dp"
                tools:text="10券包"/>

            <TextView
                android:id="@+id/shopDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/shopName"
                android:textColor="#5C350E"
                android:textSize="9sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="8dp"
                android:text="可领取30次 每次领取0.4"/>



        </com.hjq.shape.layout.ShapeConstraintLayout>

        <TextView
            android:id="@+id/shopValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="票10个或者 优惠券 1个+贡献值1个"
            android:textSize="11sp"
            android:textColor="#3D3D3D"
            android:gravity="center"
            android:layout_marginVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/llInfo"
            app:layout_constraintBottom_toTopOf="@id/submitChange"
            android:layout_marginHorizontal="8dp"/>
        
        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/submitChange"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:shape_radius="100dp"
            app:shape_textColor="@color/color_white"
            app:shape_textSelectedColor="@color/color_white"
            app:shape_solidSelectedColor="@color/color_shop"
            app:shape_solidColor="#D0D0D0"
            android:text="兑换"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="12dp"
            android:gravity="center"/>

    </com.hjq.shape.layout.ShapeConstraintLayout>
</layout>