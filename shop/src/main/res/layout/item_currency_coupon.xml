<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:paddingVertical="20dp"
        app:shape_radius="8dp"
        app:shape_solidColor="@color/color_white">


        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/exchange"
            style="@style/button_50"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginRight="12dp"
            android:paddingHorizontal="22dp"
            android:text="去兑换"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="4dp"
            android:text="¥"
            android:textColor="#FF5000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/money"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="#FF5000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/rmb"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/couponName"
            style="@style/tv_16_333_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="20元优惠券"
            app:layout_constraintEnd_toStartOf="@id/exchange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/couponTime"
            style="@style/tv_16_333"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="12dp"
            android:text="有限期至2024.12.25"
            android:textColor="#969799"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/exchange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/couponName" />

    </com.hjq.shape.layout.ShapeConstraintLayout>
</layout>