<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.hjq.shape.layout.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:shape_radiusInTopLeft="16dp"
        app:shape_radiusInTopRight="16dp"
        app:shape_solidColor="@color/color_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/mTitle"
                style="@style/tv_16_333_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="选择兑换方式"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/dialogClose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingHorizontal="14dp"
                android:src="@mipmap/icon_dialog_close" />

        </RelativeLayout>

        <TextView
            android:id="@+id/inputTopTitle"
            style="@style/tv_16_333_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            tools:text="请输入提票数量" />

        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:shape_radius="6dp"
            app:shape_solidColor="#F5F5F5">

            <com.mh55.easy.widget.ClearWriteEditText
                android:id="@+id/mInputTopEdit"
                style="@style/edit_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="12dp"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLines="1"
                android:hint="请输入数量" />

            <TextView
                android:id="@+id/inputAll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:text="全部"
                android:visibility="gone"
                tools:visibility="visible"
                android:textColor="@color/color_shop"
                android:textSize="16sp"
                android:textStyle="bold" />
        </com.hjq.shape.layout.ShapeLinearLayout>

        <TextView
            android:id="@+id/inputHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:text="当前票数余额0"
            android:textColor="#B8943E"
            android:textSize="12sp" />

        <!--兑换产品-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llGoods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <TextView
                style="@style/tv_16_333_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="填写物流信息" />

            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="12dp"
                app:shape_radius="6dp"
                app:shape_solidColor="#F5F5F5">

                <TextView
                    android:layout_width="80dp"
                    android:text="收货人"
                    android:textSize="14sp"
                    android:textColor="#323233"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"/>

                <com.mh55.easy.widget.ClearWriteEditText
                    android:id="@+id/mInputUserName"
                    style="@style/edit_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12dp"
                    android:layout_weight="1"
                    android:hint="请填写收货人姓名" />
            </com.hjq.shape.layout.ShapeLinearLayout>
            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="8dp"
                app:shape_radius="6dp"
                app:shape_solidColor="#F5F5F5">

                <TextView
                    android:layout_width="80dp"
                    android:text="手机号码"
                    android:textSize="14sp"
                    android:textColor="#323233"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"/>

                <com.mh55.easy.widget.ClearWriteEditText
                    android:id="@+id/mInputUserMobile"
                    style="@style/edit_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12dp"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:layout_weight="1"
                    android:hint="请填写收货人手机号码" />
            </com.hjq.shape.layout.ShapeLinearLayout>
            <com.hjq.shape.layout.ShapeLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:shape_radius="6dp"
                app:shape_solidColor="#F5F5F5">

                <TextView
                    android:layout_width="80dp"
                    android:text="收货地址"
                    android:textSize="14sp"
                    android:textColor="#323233"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <com.mh55.easy.widget.ClearWriteEditText
                    android:id="@+id/mInputUserAddress"
                    style="@style/edit_style"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="12dp"
                    android:gravity="top"
                    android:layout_marginVertical="12dp"
                    android:layout_weight="1"
                    android:hint="请输入详细地址信息，如道路、门牌号、小区" />
            </com.hjq.shape.layout.ShapeLinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/submit"
            style="@style/button_50"
            android:layout_marginHorizontal="26dp"
            android:layout_marginVertical="20dp"
            android:text="确认" />

    </com.hjq.shape.layout.ShapeLinearLayout>
</layout>