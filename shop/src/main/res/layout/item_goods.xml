<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.hjq.shape.layout.ShapeConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_radius="6dp"
        app:shape_solidColor="@color/color_white">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/goodsImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintDimensionRatio="h,1:1"
            app:shapeAppearanceOverlay="@style/circleImageStyle_top_6" />

        <TextView
            android:id="@+id/goodsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="MOUTTAI 悠蜜 蓝莓精品
遇见·丹红 水墨款"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/goodsImg"
            app:layout_constraintBottom_toTopOf="@id/goodsPrice"/>

        <TextView
            android:id="@+id/goodsPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:text="100优惠券+100贡献值"
            android:textColor="#FF5000"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/exchange"
            android:layout_marginBottom="10dp"/>

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/exchange"
            style="@style/button_50"
            android:layout_height="30dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:text="兑换"
            app:layout_constraintBottom_toBottomOf="parent" />

    </com.hjq.shape.layout.ShapeConstraintLayout>
</layout>