<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mh55.easy.widget.HeadZoomScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/bg"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@mipmap/bg_mine_value_consume"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-150dp"
                    android:orientation="vertical">


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginVertical="20dp">

                        <LinearLayout
                            android:id="@+id/llLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingHorizontal="12dp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_tip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="经验值"
                                android:textColor="@color/color_333333" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/icon_mine_value_consume" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_money"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:autoSizeMaxTextSize="28sp"
                                    android:autoSizeMinTextSize="1sp"
                                    android:autoSizePresetSizes="1sp"
                                    android:autoSizeTextType="uniform"
                                    android:gravity="center_vertical"
                                    android:maxLines="1"
                                    android:text="0"
                                    android:textColor="@color/color_333333"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />
                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </LinearLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.hjq.shape.layout.ShapeConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:shape_radiusInTopLeft="16dp"
                        app:shape_radiusInTopRight="16dp"
                        app:shape_solidColor="#F5F5F5">

                        <com.hjq.shape.layout.ShapeLinearLayout
                            android:id="@+id/listBg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="34dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical"
                            app:shape_radius="12dp"
                            app:shape_solidGradientCenterColor="#FFF5E3"
                            app:shape_solidGradientEndColor="#EACDA3"
                            app:shape_solidGradientOrientation="topToBottom"
                            app:shape_solidGradientStartColor="#EACEA6">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginHorizontal="12dp"
                                android:layout_marginTop="20dp"
                                android:gravity="center_vertical">

                                <com.hjq.shape.view.ShapeTextView
                                    android:layout_width="0dp"
                                    android:layout_height="26dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:text="排名"
                                    android:textColor="#FFECCB"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:shape_radius="100dp"
                                    app:shape_solidColor="@color/color_black" />

                                <View
                                    android:layout_width="14dp"
                                    android:layout_height="1dp" />

                                <com.hjq.shape.view.ShapeTextView
                                    android:layout_width="0dp"
                                    android:layout_height="26dp"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:text="昵称"
                                    android:textColor="#FFECCB"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:shape_radius="100dp"
                                    app:shape_solidColor="@color/color_black" />

                                <View
                                    android:layout_width="14dp"
                                    android:layout_height="1dp" />

                                <com.hjq.shape.view.ShapeTextView
                                    android:layout_width="0dp"
                                    android:layout_height="26dp"
                                    android:layout_weight="4"
                                    android:gravity="center"
                                    android:text="联系电话"
                                    android:textColor="#FFECCB"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:shape_radius="100dp"
                                    app:shape_solidColor="@color/color_black" />

                                <View
                                    android:layout_width="14dp"
                                    android:layout_height="1dp" />

                                <com.hjq.shape.view.ShapeTextView
                                    android:layout_width="0dp"
                                    android:layout_height="26dp"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:text="经验值"
                                    android:textColor="#FFECCB"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:shape_radius="100dp"
                                    app:shape_solidColor="@color/color_black" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/mRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="12dp"
                                android:overScrollMode="never"
                                tools:listitem="@layout/item_mine_consume_list" />

                        </com.hjq.shape.layout.ShapeLinearLayout>

                        <com.hjq.shape.view.ShapeTextView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:text="消耗达人TOP20"
                            android:textColor="#8C4400"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/listBg"
                            app:layout_constraintEnd_toEndOf="@id/listBg"
                            app:layout_constraintStart_toStartOf="@id/listBg"
                            app:layout_constraintTop_toTopOf="@id/listBg"
                            app:shape_radius="100dp"
                            app:shape_solidGradientEndColor="#EAC184"
                            app:shape_solidGradientOrientation="topToBottom"
                            app:shape_solidGradientStartColor="#FFF1D5"
                            app:shape_strokeColor="#C38932"
                            app:shape_strokeSize="1dp" />


                    </com.hjq.shape.layout.ShapeConstraintLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.mh55.easy.widget.HeadZoomScrollView>


        <com.mh55.easy.widget.title.TitleBar
            android:id="@+id/viewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_titie_tv_left_icon="@mipmap/icon_title_back_black"
            app:bar_title_tv_center="消耗达人"
            app:bar_title_tv_center_color="@color/color_333333" />


    </FrameLayout>
</layout>