<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/color_black"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_top_view" />

        <com.hjq.shape.layout.ShapeLinearLayout
            android:id="@+id/ll_top_view"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_radius="20dp"
            app:shape_solidColor="@color/color_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="100dp"
                android:orientation="vertical"
                android:paddingHorizontal="30dp"
                android:paddingTop="22dp"
                android:paddingBottom="17dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_Tip_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#232323"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="提示" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_Tip_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#232323"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="请确认邀请码：GWE3264" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_Tip_content02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#323233"
                    android:textSize="13sp"
                    android:gravity="center"
                    tools:text="请核对信息填写无误！账号关系后，将无法解绑。" />
            </LinearLayout>

            <View
                android:background="#EBEDF0"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#323233"
                    android:textSize="16sp" />

                <View
                    android:background="#EBEDF0"
                    android:layout_height="match_parent"
                    android:layout_width="1dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_determine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/color_shop"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.hjq.shape.layout.ShapeLinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>